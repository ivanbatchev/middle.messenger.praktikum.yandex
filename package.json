{
  "name": "web_messenger",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "start": "vite build && node server.js",
    "lint": "eslint src --ext .ts --ext .js && tsc --noEmit",
    "lint:fix": "eslint src --ext .ts --ext .js --fix && tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js} --ignore-unknown && tsc --noEmit",
    "stylelint": "stylelint src/**/*.{css,scss}",
    "stylelint:fix": "stylelint src/**/*.{css,scss} --fix"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
